<Page x:Class="WinCC.Wpfui.Views.Pages.TaskRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WinCC.Wpfui.Views.Pages"
            xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
      xmlns:controls="clr-namespace:WinCC.Wpfui.Controls"
          d:DataContext="{d:DesignInstance local:TaskRecordPage,
                                     IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
        d:DesignHeight="1000" d:DesignWidth="1800"
      Title="TaskRecordPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="780"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid  Margin="10 15 15 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="2"  Grid.RowSpan="2" Background="{StaticResource MainWinBorderHighRank}" CornerRadius="10"/>
            <StackPanel  Orientation="Horizontal">
                <StackPanel  Orientation="Horizontal" Margin="10 10 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock  Text="条码:" Style="{StaticResource BaseTextBlock}"/>
                    <ui:TextBox Name="txtContainerCode" Width="220" Style="{StaticResource BaseTextBox}"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal" Margin="10 10 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock  Text="状态:" Style="{StaticResource BaseTextBlock}"/>
                    <ui:TextBox Name="txtStatus" Width="100" Style="{StaticResource BaseTextBox}"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal"  Margin="10 10 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock  Text="库位:" Style="{StaticResource BaseTextBlock}"/>
                    <ui:TextBox Name="txtLocation" Style="{StaticResource BaseTextBox}"/>
                </StackPanel>               
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="1" Margin="0 0 0 0" Orientation="Horizontal">
                <ui:Button Grid.Column="0" Command="{Binding ViewModel.SelectCommand, Mode=OneWay}" Content="查询" Style="{StaticResource HeadButton}" Icon="{ui:ImageIcon 'pack://application:,,,/Asserts/Photos/blueSave.png',Height=25,Width=25}"  />
                <ui:Button Grid.Column="0" Command="{Binding ViewModel.SelectCommand, Mode=OneWay}" Content="修改" Style="{StaticResource HeadButton}" Icon="{ui:ImageIcon 'pack://application:,,,/Asserts/Photos/blueSave.png',Height=25,Width=25}"  />
                <ui:Button Grid.Column="0" Command="{Binding ViewModel.SelectCommand, Mode=OneWay}" Content="删除" Style="{StaticResource HeadButton}" Icon="{ui:ImageIcon 'pack://application:,,,/Asserts/Photos/blueSave.png',Height=25,Width=25}"  />
                <!--<ui:Button Grid.Column="0" Command="{Binding ViewModel.CreateCommand, Mode=OneWay}" Content="生成" Style="{StaticResource HeadButton}" Icon="{ui:ImageIcon 'pack://application:,,,/Asserts/Photos/blueSave.png',Height=25,Width=25}"  />-->
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1" Margin="10 15 15 0">
            <Border  Background="{StaticResource MainWinBorderHighRank}" CornerRadius="10"/>
            <ui:DataGrid Margin="10 5 5 0" ItemsSource="{Binding ViewModel.CurrentLocations,Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" VirtualizingStackPanel.IsVirtualizing ="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="序号" Binding="{Binding Id}" HeaderStyle="{StaticResource CenterDataGridColumnHeader}" CellStyle="{StaticResource centerDataGridCell}"  Width="100"/>
                    <DataGridTextColumn Header="名称" Binding="{Binding Code}" HeaderStyle="{StaticResource CenterDataGridColumnHeader}" CellStyle="{StaticResource centerDataGridCell}"  Width="100"/>
                    <DataGridTextColumn Header="行" Binding="{Binding Row}" HeaderStyle="{StaticResource CenterDataGridColumnHeader}" CellStyle="{StaticResource centerDataGridCell}"  Width="80"/>
                    <DataGridTextColumn Header="列" Binding="{Binding Column}" HeaderStyle="{StaticResource CenterDataGridColumnHeader}" CellStyle="{StaticResource centerDataGridCell}"  Width="80"/>
                    <DataGridTextColumn Header="层" Binding="{Binding Layer}" HeaderStyle="{StaticResource CenterDataGridColumnHeader}" CellStyle="{StaticResource centerDataGridCell}"  Width="80"/>
                    <DataGridTextColumn Header="条码" Binding="{Binding ContainerCode}" HeaderStyle="{StaticResource CenterDataGridColumnHeader}" CellStyle="{StaticResource centerDataGridCell}"  Width="200"/>
                    <DataGridTextColumn Header="状态" Binding="{Binding StatusCode}" HeaderStyle="{StaticResource CenterDataGridColumnHeader}" CellStyle="{StaticResource centerDataGridCell}"  Width="80"/>
                </DataGrid.Columns>
            </ui:DataGrid>
        </Grid>

        <Grid  Grid.Row="2" Margin="10 15 15 0">
            <Border  Background="{StaticResource MainWinBorderHighRank}" CornerRadius="10"/>
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:NumberBox  MaxDecimalPlaces="1" SmallChange="1" Minimum="1" Maximum="{Binding ViewModel.SkipPageAmount}" Width="150" Value="{Binding ViewModel.SkipPageNumber,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ui:Button Grid.Column="0" Command="{Binding ViewModel.SkipPageCommand, Mode=OneWay}" Content="跳转" Style="{StaticResource HeadButton}" />
                <ui:Button Grid.Column="0" Command="{Binding ViewModel.PreviousPageCommand, Mode=OneWay}" Content="上一页" Style="{StaticResource HeadButton}" />
                <ui:Button Grid.Column="0" Command="{Binding ViewModel.NextPageCommand, Mode=OneWay}" Content="下一页" Style="{StaticResource HeadButton}" />
            </StackPanel>

        </Grid>
    </Grid>
</Page>
