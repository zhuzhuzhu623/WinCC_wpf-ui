<ui:ContentDialog x:Class="WinCC.Wpfui.DialogViews.DialogLocationEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCC.Wpfui.DialogViews"
               xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 CloseButtonText="Close"
               PrimaryButtonText="保存"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:DialogLocationEdit}" />
    </ui:ContentDialog.Resources>

    <Grid>
        <StackPanel>
            <StackPanel  Orientation="Horizontal">
                <TextBlock  Text="行:" Style="{StaticResource BaseTextBlock}"/>
                <TextBox Name="txtRow"  Width="120" Height="40"/>
            </StackPanel>
            <StackPanel  Orientation="Horizontal">
                <TextBlock  Text="列:" Style="{StaticResource BaseTextBlock}"/>
                <TextBox Name="txtCol"  Width="120" Height="40"/>
            </StackPanel>
            <StackPanel  Orientation="Horizontal">
                <TextBlock  Text="层:" Style="{StaticResource BaseTextBlock}"/>
                <TextBox Name="txtLayer"  Width="120" Height="40"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:ContentDialog>
