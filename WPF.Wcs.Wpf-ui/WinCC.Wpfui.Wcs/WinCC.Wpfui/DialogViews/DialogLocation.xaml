<ui:ContentDialog x:Class="WinCC.Wpfui.DialogViews.DialogLocation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinCC.Wpfui.DialogViews"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  Title="库位参数"
                  CloseButtonText="关闭"
                  PrimaryButtonText="保存"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="ContentDialog_Loaded">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:DialogLocation}" />
    </ui:ContentDialog.Resources>

    <Grid>
        <StackPanel>
            <StackPanel  Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock  Text="行:" Style="{StaticResource BaseTextBlock}"/>
                <ui:NumberBox Name="txtRow"  Style="{StaticResource BaseNumberBox}" />
            </StackPanel>
            <StackPanel  Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock  Text="列:" Style="{StaticResource BaseTextBlock}"/>
                <ui:NumberBox Name="txtCol" Style="{StaticResource BaseNumberBox}"/>
            </StackPanel>
            <StackPanel  Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock  Text="层:" Style="{StaticResource BaseTextBlock}"/>
                <ui:NumberBox Name="txtLayer" Style="{StaticResource BaseNumberBox}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:ContentDialog>
