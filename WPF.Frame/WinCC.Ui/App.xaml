<Application x:Class="WinCC.Ui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WinCC.Ui"    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="WinLog.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />

                <ResourceDictionary Source="Resources/Brushes.xaml"/>

                <ResourceDictionary Source="Resources/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Resources/TextBlockBox.xaml"/>
                <ResourceDictionary Source="Resources/ListBoxStyle.xaml"/>
                <ResourceDictionary Source="Resources/DataGridStyle.xaml"/>
                <ResourceDictionary Source="Resources/TabControlStyle.xaml"/>
                <ResourceDictionary Source="Resources/ExpanderStyle.xaml"/> 
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
</Application>
