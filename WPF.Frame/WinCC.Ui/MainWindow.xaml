<Window x:Class="WinCC.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCC.Ui"  
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
                    xmlns:Cog="clr-namespace:Cognex.VisionPro.Display;assembly=Cognex.VisionPro.Display.Controls" xmlns:local1="clr-namespace:WinCC.Ui.Views.CameraView"
                 mc:Ignorable="d"
       Height="1080" Width="1920" Loaded="Window_Loaded"           
                       WindowState="Maximized"
WindowStartupLocation="CenterScreen"  WindowStyle="None" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ui:TitleBar
      x:Name="TitleBar"
      Title="{Binding ViewModel.ApplicationTitle}"
      Grid.Row="0"
      CloseWindowByDoubleClickOnIcon="True" VerticalAlignment="Center" VerticalContentAlignment="Center">
        </ui:TitleBar>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="600"/>
            </Grid.ColumnDefinitions>
            <ui:NavigationView 
 x:Name="RootNavigation"
 Grid.Row="1" Grid.Column="0"
 PaneDisplayMode="LeftFluent" >
                <ui:NavigationView.Header>
                    <ui:BreadcrumbBar
         Margin="0"
         FontSize="28"
         FontWeight="DemiBold" />
                </ui:NavigationView.Header>

            </ui:NavigationView>
            <!--<WindowsFormsHost Grid.Column="1">
                <Cog:CogDisplay x:Name="displayView"   />
            </WindowsFormsHost>-->
            <!--<ContentControl x:Name="ucCameraFirstContent" Grid.Column="1" Height="800"/>-->

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
            </Grid>
        </Grid>
   
    </Grid>
</Window>
