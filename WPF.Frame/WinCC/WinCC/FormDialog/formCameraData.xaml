<Window x:Class="WinCC.FormDialog.formCameraData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinCC.FormDialog"    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Camera" Height="400" Width="400"  Background="{DynamicResource MainDialogBorder}" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <StackPanel Margin="5 15 5 15">
                <TextBlock Text="添加相机"  FontSize="18" Foreground="{DynamicResource TextForeground}"/>
                <Grid  Margin="0 5 5 5">
                    <Border Margin="0" CornerRadius="5" Background="{DynamicResource WinUserBorder}" BorderThickness="0" />
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Asserts/Photos/Chinese.png" Height="25" Margin="10 0 0 0"/>
                        <Border BorderBrush="{DynamicResource MainColorLine}" BorderThickness="0 0 1 0" Margin="10 8 0 8"/>
                        <!--md:HintAssist.HelperText="Please enter user"-->
                        <TextBox x:Name="txtCameraName"  md:HintAssist.Hint="名称" Foreground="{DynamicResource TextForeground}" FontSize="18" BorderThickness="0" VerticalContentAlignment="Center" Width="274" Height="45"  md:HintAssist.Foreground="{DynamicResource LoginLine}"
md:TextFieldAssist.UnderlineBrush="{DynamicResource MainColorLine}"  Margin="10 0 0 0" >

                        </TextBox>
                    </StackPanel>
                </Grid>
                <Grid  Margin="0 5 5 5">
                    <Border Margin="0" CornerRadius="5" Background="{DynamicResource WinUserBorder}" BorderThickness="0" />
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Asserts/Photos/Chinese.png" Height="25" Margin="10 0 0 0"/>
                        <Border BorderBrush="{DynamicResource MainColorLine}" BorderThickness="0 0 1 0" Margin="10 8 0 8"/>
                        <!--md:HintAssist.HelperText="Please enter user"-->
                        <TextBox x:Name="txtCameraserName"  md:HintAssist.Hint="序列号" Foreground="{DynamicResource TextForeground}" FontSize="18" BorderThickness="0" VerticalContentAlignment="Center" Width="274" Height="45"  md:HintAssist.Foreground="{DynamicResource LoginLine}"
md:TextFieldAssist.UnderlineBrush="{DynamicResource MainColorLine}"  Margin="10 0 0 0" >

                        </TextBox>
                    </StackPanel>
                </Grid>
                <Grid  Margin="0 5 5 5">
                    <Border Margin="0" CornerRadius="5" Background="{DynamicResource WinUserBorder}" BorderThickness="0" />
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Asserts/Photos/Chinese.png" Height="25" Margin="10 0 0 0"/>
                        <Border BorderBrush="{DynamicResource MainColorLine}" BorderThickness="0 0 1 0" Margin="10 8 0 8"/>
                        <!--md:HintAssist.HelperText="Please enter user"-->
                        <TextBox x:Name="txtCameraWidth"  md:HintAssist.Hint="像素宽" Foreground="{DynamicResource TextForeground}" FontSize="18" BorderThickness="0" VerticalContentAlignment="Center" Width="274" Height="45"  md:HintAssist.Foreground="{DynamicResource LoginLine}"
md:TextFieldAssist.UnderlineBrush="{DynamicResource MainColorLine}"  Margin="10 0 0 0" PreviewTextInput="txtCameraWidth_PreviewTextInput" >

                        </TextBox>
                    </StackPanel>
                </Grid>
                <Grid  Margin="0 5 5 5">
                    <Border Margin="0" CornerRadius="5" Background="{DynamicResource WinUserBorder}" BorderThickness="0" />
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Asserts/Photos/Chinese.png" Height="25" Margin="10 0 0 0"/>
                        <Border BorderBrush="{DynamicResource MainColorLine}" BorderThickness="0 0 1 0" Margin="10 8 0 8"/>
                        <!--md:HintAssist.HelperText="Please enter user"-->
                        <TextBox x:Name="txtCameraHeight"  md:HintAssist.Hint="像素高" Foreground="{DynamicResource TextForeground}" FontSize="18" BorderThickness="0" VerticalContentAlignment="Center" Width="274" Height="45"  md:HintAssist.Foreground="{DynamicResource LoginLine}"
md:TextFieldAssist.UnderlineBrush="{DynamicResource MainColorLine}"  Margin="10 0 0 0" PreviewTextInput="txtCameraHeight_PreviewTextInput">

                        </TextBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 40 0 0">
                <Button x:Name="btnYes" Margin="5"  Foreground="White"  FontSize="12" Background="#5cb85c" Content="Yes" Width="80" Height="35" Grid.Row="1" Click="btnYes_Click"/>
                <Button x:Name="btnNo" Grid.Column="1" Margin="5"  Foreground="White"  FontSize="12" Background="#d9534f"  Content="No" Width="80" Height="35"  Grid.Row="1"
                     Click="btnNo_Click"   />
            </StackPanel>
        </StackPanel>
       
    </Grid>
</Window>
