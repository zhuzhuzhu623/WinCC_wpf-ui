<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"         xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="LoginTextBlock" TargetType="TextBlock" >
        <Setter Property="FontFamily" Value="微软雅黑"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
    </Style>

    <Style x:Key="BaseTextBlock" TargetType="TextBlock" >
        <Setter Property="FontFamily" Value="微软雅黑"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Width" Value="60"/>     
        <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
    </Style>


    <Style x:Key="TxtBoxBase" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBoxBase}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="md:TextFieldAssist.DecorationVisibility" Value="Collapsed"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MainColorLineTwo}"/>
        <Setter Property="BorderThickness" Value="0 0 0 0.7" />
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="6 0 4 0"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MaxWidth" Value="40"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="25"/>
    </Style>
</ResourceDictionary>
